        toggleBtn.Text = "â‰¡"
    else
        goal.Position = UDim2.new(0.5,-300,0.5,-200) -- ÙŠØ±Ø¬Ø¹ Ø§Ù„Ù†Øµ
        toggleBtn.Text = "âœ–"
    end
    menuOpen = not menuOpen
    TweenService:Create(mainFrame, TweenInfo.new(0.7, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), goal):Play()
end)

